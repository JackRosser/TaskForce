@inherits LayoutBase


    <div class="dropdown">
        <button class="btn @Theme @($"btn-{Theme}-{Color}") dropdown-toggle @CssClass" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        @{
            var font = Theme switch
            {
                Tema.vs => "Consolas, sans-serif",
                Tema.isys => "Archia, sans-serif",
                _ => "Helvetica, sans-serif"
            };
        }
            <span style="font-family: @($"{font}")">@Text</span>
        </button>
        <ul class="dropdown-menu @(FirstLineColor ? "first-line" : "") @Theme">
        @if (DropDownItems is not null)
        {
            foreach (var item in DropDownItems)
            {
                <li><a class="dropdown-item" @onclick="@item.Action">@item.Text</a></li>
            }
        }           
        </ul>
    </div>
