@inherits LayoutBase


@if(List is not null)
{
    @foreach (var progetto in List)
    {
        var isShow = progetto.Id == ProgettoVisualizzatoId;
        <div class="@($"progettocontainer {(isShow ? "d-flex" : "d-none")} {Theme}")">
            <section class="project-deadline">
                <div class="info">
                    <strong>Consegna prevista:</strong>
                    <span class="date">@progetto.Consegna.ToShortDateString()</span>
                </div>

                @{
                    var oggi = DateTime.Today;
                    bool tempoEsaurito = progetto.Consegna <= oggi;
                }

                @if (!tempoEsaurito)
                {
                    <div class="countdown">
                        <div>
                            <strong>Tempo mancante:</strong>
                            <span>@TempoMancante</span>
                        </div>
                        <div>
                            <strong>Giorni lavorativi:</strong>
                            <span>@GiorniLavorativi</span>
                        </div>
                    </div>
                }
                else
                {
                    <div class="expired">
                        <strong>Tempo esaurito</strong>
                    </div>
                }
            </section>

            @if (progetto.MacroFasi is not null)
            {
                foreach (var macro in progetto.MacroFasi)
                {
                    <div class="macrocontainer">
                        <h2>@macro.Nome</h2>
                        @if (macro.Fasi is not null)
                        {
                            <table class="macro-table">
                                <thead>
                                    <tr>
                                        <th></th>
                                        @foreach (var header in Headers)
                                        {
                                            <th>@header.Name</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var fase in macro.Fasi)
                                    {
                                        <tr>
                                            <td>@fase.Nome</td>
                                            <td>@fase.GiorniPrevisti</td>
                                            <td><Badge StatoDiFase="@fase.Stato" /></td>
                                            <td>
                                                @if (fase.PreseInCarico is not null)
                                                {
                                                    <table class="dev-table">
                                                        <thead>
                                                            <tr>
                                                                <th>Developer</th>
                                                                <th>Inizio</th>
                                                                <th>Stato</th>
                                                                <th>Fine</th>
                                                                <th>Tempistiche</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var dev in fase.PreseInCarico)
                                                            {
                                                                <tr>
                                                                    <td>@dev.UserName</td>
                                                                    <td>@dev.DataInizio.ToShortDateString()</td>
                                                                    <td><Badge StatoDiUtente="@dev.Stato" /></td>
                                                                    <td>@(dev.DataFine?.ToShortDateString() ?? "")</td>
                                                                    <td>@dev.DeltaTempi</td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                }
            }
        </div>
    }

    <Headers List="@List" ProgettoAttivo="@ProgettoVisualizzatoId" ProgettoAttivoChanged="SetId"/>
}